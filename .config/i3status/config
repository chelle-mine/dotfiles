# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format = "i3bar"
	separator = ""
        colors = true
	color_good = "#FFFFFF"
	color_degraded = "#6A6A6A"
	color_bad = "#CC1616"
        interval = 1
}

order += "wireless wlo1"
order += "disk /home"
order += "cpu_usage"
order += "volume master"
order += "battery 0"
order += "tztime local"


battery 0 {
	align = "center"
        format = " %status:%percentage " 
	integer_battery_capacity = true
	last_full_capacity = true
	path = "/sys/class/power_supply/BAT0/uevent"
	low_threshold = 30
	status_full = "ac"
	status_chr = "ac"
	status_bat = "bat"
}

cpu_usage {
	align = "center"
        format = " cpu:%usage "
}

disk "/home" {
	align = "center"
        format = " /home:%avail "
}

tztime local {
	align = "center"
        format = " %Y-%m-%d %H:%M:%S "
}

volume master {
	align = "center"
	device = "pulse"
	format = " vol:%volume "
	format_muted = "mute:%volume"
}

wireless wlo1 {
	align = "center"
        format_up = "wifi:%essid"
        format_down = "nofi"
}
